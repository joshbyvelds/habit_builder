{% extends 'layout.twig' %}

{% block title %}Habit Builder - Installer{% endblock %}

{% block header %}

{% endblock %}

{% block main %}
    <form id="install_form">
        <label for="db_user">Database Username</label>
        <input type="text" name="db_user">
        <br />
        <label for="db_pass">Database Password</label>
        <input type="password" name="db_pass">
        <br />
        <label for="db_name">Database Name</label>
        <input type="text" name="db_name">
        <br />
        <div class="form_switch">
            <div class="label">Database Already Created</div>
            <input type="checkbox" name="db_created">
        </div>
        <br />
        <label for="admin_user">Admin User Username</label>
        <input type="text" name="admin_user">
        <br />
        <label for="admin_pass">Admin User Password</label>
        <input type="password" name="admin_pass">

        <div class="errorbox">This is a error</div>

        <button type="submit" id="install_submit_btn">Install</button>
    </form>
{% endblock %}